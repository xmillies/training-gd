<form method="post" class="mt-2" action="{{ path('app_admin_genre_delete', {'uuid': genre_uuid}) }}" onsubmit="return confirm('Are you sure you want to delete this genre ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ genre_uuid) }}">
    <button class="btn btn-sm btn-danger">Delete this genre</button>
</form>

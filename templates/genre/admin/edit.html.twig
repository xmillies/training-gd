{% extends 'base.html.twig' %}

{% block author 'SensioTV' %}
{% block description 'Edit a genre which will be directly accessible by an user.' %}

{% block og_image 'https://university.sensiolabs.com/images/sensiolabs-university-fullwhite.png' %}
{% block og_title 'Admin Dashboard - Edit a genre' %}
{% block og_description 'Edit a genre which will be directly accessible by an user.' %}

{% block title 'Admin Dashboard - Edit a genre' %}

{% block body_attributes 'id="genre-admin-edit"' %}
{% block body %}
    {{ include('admin/_sidebar.html.twig', {'currentRoute': app.request.attributes.get('_route')}, with_context = false) }}

    <section id="content" class="bg-light p-5">
        <div class="container mt-5 mt-md-0 jumbotron">
            <div class="row mb-5">
                <div class="col-lg">
                    <h1 class="display-4 font-weight-bold">Edit <span class="text-success">{{ genre.name }}</span> genre.</h1>
                </div>
            </div>
            <div class="row mb-5 p-3">
                <div class="col-lg img-rounded bg-light p-3">
                    {{ include('genre/admin/_form.html.twig', {'form': form, 'button_label': 'Save your modification'}, with_context = false) }}
                    {{ include('genre/admin/_delete_form.html.twig', {'genre_uuid': genre.uuid}, with_context = false) }}
                </div>
            </div>
            <div class="row p-3">
                <ul class="list-unstyled">
                    <li><a href="{{ path('app_admin_genre_index') }}" title="Click to back on genre list"><i class="fas fa-arrow-left"></i> Back to genre list</a></li>
                </ul>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('sidebar') }}
{% endblock %}

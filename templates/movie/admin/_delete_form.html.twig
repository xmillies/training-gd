<form method="post" class="mt-2" action="{{ path('app_admin_movie_delete', {'uuid': movie_uuid}) }}" onsubmit="return confirm('Are you sure you want to delete this movie ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ movie_uuid) }}">
    <button class="btn btn-sm btn-danger">Delete this movie</button>
</form>

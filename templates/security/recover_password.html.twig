{% extends 'base.html.twig' %}

{% block author 'SensioTV' %}
{% block description 'Recovering your password with your account email.' %}

{% block og_image 'https://university.sensiolabs.com/images/sensiolabs-university-fullwhite.png' %}
{% block og_title 'Password Recovery' %}
{% block og_description 'Recovering your password with your account email.' %}

{% block title 'Password Recovery' %}

{% block body_attributes 'id="recover-password"' %}
{% block body %}
    <!-- TODO: Implement a real recovering password feature -->
    <section class="bg-light mb-5 mt-5">
        <div class="container pb-5 pt-5">
            <div class="row align-items-center pb-5 pt-5">
                <div class="col-lg-5 pt-5 pb-5">
                    <h1 class="font-weight-bold display-4 mt-2 ml-2 mb-4">Are you having trouble signing in ?</h1>
                    <p class="lead mt-5 mb-3 ml-2">
                        Please enter your email to receive a new password available during 10 minutes.
                    </p>
                    <form class="form-signin">
                        <div class="row">
                            <div class="col-12 m-2">
                                <label for="inputEmail" class="sr-only">Email address</label>
                                <input type="email" id="inputEmail" class="form-control form-control-lg" placeholder="Email address" required autofocus>
                            </div>
                            <div class="col-12 mt-4 mb-3 mr-2 ml-2">
                                <button class="btn btn-outline-dark btn-block" type="submit">Continue</button>
                            </div>
                            <div class="col-12 m-2">
                                <p>
                                    <a href="{{ path('app_security_login') }}" title="Click here to log in">Get your password ? Back to the login page <i class="far fa-arrow-alt-circle-right"></i></a>
                                    <br>
                                    <a href="{{ path('app_register') }}" title="Create an account to SensioTV">Don't have an account ? Create one now. <i class="far fa-arrow-alt-circle-right"></i></a>
                                </p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
